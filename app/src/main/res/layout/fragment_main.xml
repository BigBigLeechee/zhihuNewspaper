<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp">

        <com.example.billy.zhihunewspaper_reset.client.view.ClickableViewPager
            android:id="@+id/cvp_main_titleImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/defalut_image_background" />


        <com.example.billy.zhihunewspaper_reset.client.view.CircleIndicator
            android:id="@+id/ci_main_circleIndicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_main_data"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_date"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_content"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>