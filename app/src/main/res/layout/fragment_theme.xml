<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp">

        <com.example.billy.zhihunewspaper_reset.client.view.ClickableViewPager
            android:id="@+id/cvp_theme_titleImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/defalut_image_background" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_theme_editorMessage"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_theme_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/theme_editor"
            android:textSize="20sp"
            android:textStyle="italic"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_theme_editors"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:foregroundGravity="center_vertical"
            android:layout_toEndOf="@+id/tv_theme_editor" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_theme_content"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>