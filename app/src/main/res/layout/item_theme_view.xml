<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_moreTheme_profilePhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/profile_work_ot_pic"
            />

        <TextView
            android:id="@+id/tv_moreTheme_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/moreTheme_username"
            android:textSize="25sp"
            android:textStyle="italic|bold"
            android:gravity="center"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_moreTheme_currentTheme"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/moreTheme_currentTheme"
        android:textSize="20sp"
        android:gravity="center_vertical"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_moreTheme_theme"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>